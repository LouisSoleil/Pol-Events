            <% }
            else { %>
              <option value="<%= member[0].isAdmin %>" disabled selected> Super Admin </option>
              <% } %>
              <option value="0"> Normal </option>
              <option value="1"> Admin </option>
              <option value="2"> Super Admin </option>
            </select>
          </li>
          <% if (locals.isSuperAdmin == 1) {%>
            <button class="btn btn-primary" type="submit">Modifier</button>
          <%}%>
      </form>
    </div>
    <a href="/admin/search" class="btn btn-secondary">Retour</a>
  </div>

